{{!
    @template gradingform_rubric/criterion

    Template to render a list of posts for a discussion.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Example context (json):
    {
    }
}}
<td id="{{id}}" class="{{classes}}" width="{{width}}" tabindex="0" aria-label="{{aria-label}}" role="radio" aria-checked="{{aria-checked}}">
    <div class="level-wrapper">
        <div class="radio">
            <input type="radio" id="{{input-id}}" name="{{input-name}}" value="{{input-name}}" />
        </div>
        <div class="definition" id="{{definition-id}}">{{definition-value}}</div>
        <div class="score">
            <span id="{{score-id}}" class="scorevalue">{{score-value}}</span>{{#str}}points, grades{{/str}}
        </div>
    </div>
</td>
