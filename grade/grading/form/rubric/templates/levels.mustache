{{!
    @template gradingform_rubric/levels

    Template to render a list of posts for a discussion.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Example context (json):
    {
    }
}}
<td class="description" id="{{id}}" tabindex="0" aria-label="Criterion {{description}}">
    {{description}}
</td>
<td class="levels">
    <table id="{{table-id}}" aria-label="Levels group">
        <tr id="{{table-row-id}}" role="radiogroup">
            {{#criterion}}
                {{> gradingform_rubric/criterion }}
            {{/criterion}}
        </tr>
    </table>
</td>
