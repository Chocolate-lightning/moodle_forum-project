{{!
    @template forumreport_summary/filters

    Summary report filters.

    Example context (JSON):
    {
        "actionurl": "https://mymoodlesite.com/mod/forum/report/summary/index.php?courseid=2&forumid=2&perpage=25",
        "filtergroups": [
            {
                "gropuid": "1",
                "groupname": "Group A",
                "checked": true
            },
            {
                "gropuid": "3",
                "groupname": "Group C",
                "checked": false
            },
        ]
    }
}}

<div>
    <form id="filtersform" name="filtersform" method="post">
        <button type="button" id="filter_groups_button" class="btn btn-secondary" data-container="body" data-toggle="filter-groups-popover" data-placement="bottom">
            {{# str}} filter:groupsname, forumreport_summary {{/ str}}
        </button>

        <input type="submit" name="generate" class="btn btn-primary" title="{{# str}}generatereport, forumreport_summary{{/ str}}"
            formaction="{{actionurl}}" value="{{# str}}generatereport, forumreport_summary{{/ str}}">

        {{! Start filters content }}
        <div id="filter-groups-popover" class="popover b-t-3 d-none">
            <h3 class="popover-header">{{# str}} filter:groupsname, forumreport_summary {{/ str}}</h3>
            <div class="popover-body">
                <div class="form-check">
                    {{#filtergroups}}
                    <input id="filtergroups{{groupid}}" class="form-check-input" type="checkbox" name="filtergroups[]"
                            value="{{groupid}}" {{#checked}} checked="checked" {{/checked}}>
                    <label class="form-check-label" for="filtergroups{{groupid}}">{{groupname}}</label>
                    <br>
                    {{/filtergroups}}
                    <br>
                </div>
                <div class="form-group">
                    <button type="button" class="btn btn-primary filter-save">Save</button>
                    <button type="button" class="btn btn-primary filter-clear">Clear</button>
                </div>
            </div>
        </div>
        {{! End filters content }}
    </form>
</div>
