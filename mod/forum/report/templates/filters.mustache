{{!
    @template forumreport_summary/filters

    Summary report filters.

    Example context (json):
    {
        "something": "TODO",
        "somethingelse": "Also ... TODO"
    }
}}

<p>Some page.</p>
<div style="width:50%; margin-left: 20%">
    <form id="filtersform" name="filtersform" method="post">
        <button type="button" id="filter_groups_button" class="btn btn-primary" data-container="body" data-toggle="filter-groups-popover" data-placement="bottom">Groups</button>
        <input type="hidden" id="filter_groups_value" name="filter_groups_value" value=''>
        <br><br>
        <input type="submit" id="submit_button" name="submit_button" formaction="formtesting.php" value="Submit">
    </form>

    <div class="report-filters">
        <span id="filter-groups-title" style="display:none;">Groups</span>
        <div id="filter-groups-content" style="display:none;">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="filtergroups[]" value="3" checked>
                <label class="form-check-label" for="filtergroups">Group 3</label>
                <br>
                <input class="form-check-input" type="checkbox" name="filtergroups[]" value="6">
                <label class="form-check-label" for="filtergroups">Group 6</label>
                <br>
                <input class="form-check-input" type="checkbox" name="filtergroups[]" value="9">
                <label class="form-check-label" for="filtergroups">Group 9</label>
                <br><br>
            </div>
            <div class="form-group">
                <button type="button" class="btn btn-primary filter-save">Save</button>
                <button type="button" class="btn btn-primary filter-cancel">Clear</button>
            </div>
        </div>
    </div>
</div>

